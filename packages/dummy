#Distributed under the terms of a MIT license.

# start of configuration section

pace=6
timeout=40
start_timeout=60
stop_timeout=60

# end of configuration section

cd ${0%/*}
os=$(uname)

case $1 in
 echo)
   eval echo \$$2
 ;;

 start)
   . modules/maintenance.$os
   exit 0
 ;;

 stop)
   ret=0
   . modules/maintenance.$os
   exit $ret
 ;;

 status)
   num_check=0
   failed_check=0
   . modules/maintenance.$os
   [ "$failed_check" -eq "$num_check" ] && exit 1
   [ "$failed_check" -eq "0" ] && exit 0
   exit 2
 ;;
esac
